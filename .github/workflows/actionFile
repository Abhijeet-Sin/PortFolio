name: Deploy to GitHub Pages

on:
  push:
    branches:
      - Dev   # branch to watch

jobs:
  build-and-deploy:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout code
        uses: actions/checkout@v3

      - name: Set up Node
        uses: actions/setup-node@v3
        with:
          node-version: '20'  # or your Node version

      - name: Install dependencies
        run: npm install

      - name: Build project
        run: npm run build   # React: build -> build folder, Vite: build -> dist folder

      - name: Deploy to GitHub Pages
        uses: peaceiris/actions-gh-pages@v7
        with:
          github_token: ${{ secrets.GITHUB_TOKEN }}
          publish_dir: ./dist
